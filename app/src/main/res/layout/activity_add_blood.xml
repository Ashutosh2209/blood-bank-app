<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DD3A3A">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-black"
        android:text="Add Blood"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/bid"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="Enter BID (NameAge: For Ex:Muneeb21) "
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/units"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="230dp"
        android:ems="10"
        android:hint="Enter Units of Blood"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"/>

<!--    <EditText-->
<!--        android:id="@+id/editTextTextMultiLine8"-->
<!--        android:layout_width="280dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:layout_marginTop="310dp"-->
<!--        android:ems="10"-->
<!--        android:hint="Enter Blood Group"-->
<!--        android:inputType="textPersonName"-->
<!--        android:textColor="#FFFFFF"-->
<!--        android:textColorHint="#FFFFFF" />-->

    <Spinner
        android:id="@+id/bldgrp"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="310dp"
        android:theme="@style/mySpinnerItemStyle"
        android:entries="@array/bloodGroup_arrays"
        android:prompt="@string/bloodGroup"/>



    <Button
        android:id="@+id/Addblood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp"
        android:background="@drawable/rounded_corner"
        android:padding="15dp"
        android:text="Submit"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="480dp"
        android:visibility="invisible" />


</FrameLayout>