<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codewithashu.bloodbankandroidapp">

    <uses-permission android:name="android.permission.INTERNET" />



    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/blood_bank_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AddBlood"             android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name= ".DeleteBlood"            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".RequestBlood"             android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".DonateBlood"             android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".AvailableBlood" android:label="Available Blood" />
        <activity android:name=".SplashScreen"            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login"             android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".SignUp"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".Dashboard"             android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".MainActivity" />
    </application>

</manifest>